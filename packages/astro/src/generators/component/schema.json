{
  "$schema": "http://json-schema.org/schema",
  "$id": "NxtensionsAstroComponentGenerator",
  "title": "Astro Component Generator",
  "description": "Generates an Astro or Markdown component.",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "description": "The path at which to create the component file, relative to the current working directory.",
      "alias": "d",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Where to create the component?",
      "x-priority": "important"
    },
    "name": {
      "type": "string",
      "description": "The logical name of the component.",
      "x-priority": "important"
    },
    "style": {
      "type": "string",
      "description": "Type of style to use.",
      "alias": "s",
      "enum": ["css", "scss", "sass", "less", "styl", "none"],
      "default": "css",
      "x-prompt": {
        "message": "Which type of style do you want to use?",
        "type": "list",
        "items": [
          {
            "label": "CSS",
            "value": "css"
          },
          {
            "label": "SCSS",
            "value": "scss"
          },
          {
            "label": "SASS",
            "value": "sass"
          },
          {
            "label": "LESS",
            "value": "less"
          },
          {
            "label": "Stylus",
            "value": "styl"
          },
          {
            "label": "None",
            "value": "none"
          }
        ]
      }
    }
  },
  "required": ["path"]
}
