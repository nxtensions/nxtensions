{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "NxtensionsAstroApplicationGenerator",
  "title": "Astro Application Generator",
  "description": "Generates an Astro application.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?",
      "pattern": "^[a-zA-Z].*$"
    },
    "tags": {
      "type": "string",
      "description": "Comma separated list of tags to be applied to the project (used for linting).",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed.",
      "alias": "d"
    },
    "integrations": {
      "type": "array",
      "description": "Frameworks and addons to enable in the application.",
      "alias": "i",
      "default": [],
      "x-prompt": {
        "message": "What frameworks and/or addons would you like to enable?",
        "type": "list",
        "multiselect": true,
        "items": [
          { "label": "Lit", "value": "lit" },
          { "label": "Preact", "value": "preact" },
          { "label": "React", "value": "react" },
          { "label": "Solid", "value": "solid-js" },
          { "label": "Svelte", "value": "svelte" },
          { "label": "Vue", "value": "vue" },
          { "label": "Partytown", "value": "partytown" },
          { "label": "Sitemap", "value": "sitemap" },
          { "label": "Tailwind CSS", "value": "tailwind" },
          { "label": "Turbolinks", "value": "turbolinks" }
        ]
      }
    },
    "standaloneConfig": {
      "description": "Split the project configuration into `<projectRoot>/project.json` rather than including it inside `workspace.json`.",
      "type": "boolean"
    },
    "addCypressTests": {
      "description": "Generate an E2E project with Cypress.",
      "type": "boolean",
      "default": true
    }
  },
  "additionalProperties": false,
  "required": ["name"]
}
