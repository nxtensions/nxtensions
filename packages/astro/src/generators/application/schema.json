{
  "$schema": "http://json-schema.org/schema",
  "$id": "NxtensionsAstroApplicationGenerator",
  "title": "Astro Application Generator",
  "description": "Generates an Astro application.",
  "type": "object",
  "properties": {
    "directory": {
      "type": "string",
      "description": "A directory where the application is placed.",
      "alias": "d",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Which directory do you want to create the application in?",
      "x-priority": "important"
    },
    "name": {
      "type": "string",
      "description": "The name of the application.",
      "pattern": "^[a-zA-Z][^:]*$",
      "x-priority": "important"
    },
    "integrations": {
      "type": "array",
      "description": "Frameworks and addons to enable in the application.",
      "alias": "i",
      "default": [],
      "x-prompt": {
        "message": "What frameworks and/or addons would you like to enable?",
        "type": "list",
        "multiselect": true,
        "items": [
          {
            "label": "Lit",
            "value": "lit"
          },
          {
            "label": "Preact",
            "value": "preact"
          },
          {
            "label": "React",
            "value": "react"
          },
          {
            "label": "Solid",
            "value": "solid-js"
          },
          {
            "label": "Svelte",
            "value": "svelte"
          },
          {
            "label": "Vue",
            "value": "vue"
          },
          {
            "label": "Partytown",
            "value": "partytown"
          },
          {
            "label": "Sitemap",
            "value": "sitemap"
          },
          {
            "label": "Tailwind CSS",
            "value": "tailwind"
          },
          {
            "label": "Turbolinks",
            "value": "turbolinks"
          }
        ]
      },
      "x-priority": "important"
    },
    "tags": {
      "type": "string",
      "description": "Comma separated list of tags to be applied to the project (used for linting).",
      "alias": "t"
    },
    "e2eTestRunner": {
      "description": "Test runner to use for end-to-end tests.",
      "type": "string",
      "enum": ["none", "cypress", "playwright"],
      "default": "none"
    }
  },
  "additionalProperties": false,
  "required": ["directory"]
}
